.content.clearfix#content__main(ng-controller="contentController as contentList")
	.sidebar
		block sidebar
			include ../common/_left_menu
		block new
			include ../common/_new
	.main#catalog-page
		.main__up
			.main__up-header 
				a.main__up-link(href="#!/index") Главная
				| &raquo;
				span
					a.main__up-link(href="#!/catalog") Каталог

		.main__header
			h1.main__header-top Наш каталог
		.main__filter
			input.main__filter-input(type="text" placeholder="Введите название" ng-model="contentList.query")
			select.main__filter-select(ng-model="contentList.orderProp")
				option(disabled) Отсортировать по
				option(value="weight") Вес подарков
				option(value="price") Стоимость
		.main__container#catalog-container
			h2.main__header-top Элитные подарки
			block card_catalog
				include ../common/_card_catalog
			.main__container-btn#showMore(ng-class="{'hideItems': contentList.toggle}")
				.card__btn-2
					a.card__btn-1-link(ng-click="contentList.chooseStandart($event)") Показать еще
			.section2(ng-class="{'showItems': contentList.toggle}")
				h2.main__header-top Стандартные подарки
				block card_catalog
					include ../common/_card_catalog2
			.content__info
